{
	"manifest_version": 2,

	"name": "Renewal",
	"description": "better fking work",
	"version": "3.0",

	"background": {
		"scripts": ["background.js"]
	},

	"content_scripts": [
	{
		"matches": [
			"https://docs.google.com/*"
		],
		"js": ["content.js"],
		"run_at": "document_idle",
		"all_frames": true,
		"match_about_blank": true      
	},
	{
		"matches": [
			"https://www.facebook.com/messages*"
		],
		"js": ["face.js"],
		"run_at": "document_idle",
		"match_about_blank": true      
	}
	],

	"permissions": [
		"activeTab", 
		"tabs",
		"storage",
		"downloads"
	]
}
