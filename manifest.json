{
	"manifest_version": 2,

	"name": "StudyOrDie",
	"description": "Best way to not procastinate",
	"version": "3.0",

	"background": {
		"scripts": ["background.js"]
	},
	"icons": {"icon.png"},

	"content_scripts": [
	{
		"matches": [
			"https://docs.google.com/*"
		],
		"js": ["content.js"],
		"run_at": "document_idle",
		"all_frames": true,
		"match_about_blank": true      
	}
	],

	"permissions": [
		"activeTab", 
		"tabs",
		"storage",
		"downloads"
	]
}
